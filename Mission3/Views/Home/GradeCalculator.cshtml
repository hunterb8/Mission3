@{
    ViewData["Title"] = "Home";
}

@model GradeCalculatorModel;

<!--Grade Calculator-->
<br /><br /><h2>Grade Calculator</h2>
<br />
<form method="post">
    <label>Assignments: </label>
    <input id="assignments" type="number" min="0" max="100" asp-for="Assignments"/><br />
    <label>Group Project: </label>
    <input id="group_project" type="number" min="0" max="100" asp-for="GroupProject"/><br />
    <label>Quizzes: </label>
    <input id="quizzes" type="number" min="0" max="100" asp-for="Quizzes"/><br />
    <label>Exams: </label>
    <input id="exams" type="number" min="0" max="100" asp-for="Exams"/><br />
    <label>INTEX: </label>
    <input id="intex" type="number" min="0" max="100" asp-for="Intex"/><br /><br />
    <input id="btnCalc" type="submit" value="Calculate Grade" /><br /><br /><br /><br />

    <div asp-validation-summary="All"></div>
</form>